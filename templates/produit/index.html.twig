{% extends 'base.html.twig' %}

{% block title %}Raveur - {{categorie}}
{% endblock %}

{% block body %}

	<section>
		<div id="sorting-bar" class="container-fluid sorting-bar">

			<p>

				<button class="btn-acheter" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
					Affiner ma recherche
				</button>
			</p>
			<div class="collapse" id="collapseExample">
				<div class="card card-body">
					{{ form_start(TriForm) }}

					{{ form_widget(TriForm.filtrer) }}

					{{ form_end(TriForm) }}
				</div>
			</div>
		</article>
	</section>

	<div class="cards-align">
		{% for article in categorie.articles %}

			<div class="card" style="width: 18rem;">
				<img src="{{ asset('img/' ~ article.image) }}" class="card-img-top" alt="{{ article }}">
				<div class="card-body">
					<h5 class="card-title">{{ article }}<br>
					{% if article.nouveau %}
					<div class="text text-warning">Nouveau !</div>
					{% endif %}
					{% if article.tendance %}
					<div class="text text-warning">Tendance !</div>
					{% endif %}
					</h5>
					<p class="card-text">{{ article.prix }}â‚¬<br><br>
						<a href="{{ path('produit_detail', {'id' : article.id}) }}" class="acheter">Acheter</a>
					</p>
				</div>
			</div>


		{% endfor %}
	</div>


{% endblock %}
