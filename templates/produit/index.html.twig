{% extends 'base.html.twig' %}

{% block title %}Listing Produits{% endblock %}

{% block body %}

<section>
  <article id="liste-tri">

<form action="" method="post" class="barre-tri">
  <label for="taille">Taille</label>
  <select name="taille" id="taille">
  <option value="S">S</option>
  <option value="M">M</option>
  <option value="L">L</option>
  <option value="XL">XL</option>
    <option value="XXL">XXL</option>
  </select>

  <label for="couleur">Couleur</label>
  <select name="couleur" id="couleur">
  <option value="Noir">Noir </option>
  <option value="Blanc">Blanc</option>
  <option value="Rouge">Rouge</option>
  <option value="Bleu">Bleu</option>
  <option value="Vert">Vert</option>
  </select>
</form>

  </article>
</section>

<hr>

<div class="cards-align">
  {% for article in categorie.articles %}

  <div class="card" style="width: 18rem;">
    <img src="{{ asset('img/' ~ article.image) }}" class="card-img-top" alt="{{ article }}">
    <div class="card-body">
      <h5 class="card-title">{{ article }}</h5>
      <p class="card-text">{{ article.prix }}â‚¬<br>
        <a href="{{ path('produit_detail', {'id' : article.id}) }}" class="btn btn-primary">Acheter</a>
      </p>
    </div>
  </div>


  {% endfor %}
</div>


{% endblock %}