{% extends 'base.html.twig' %}

{% block title %}PRODUITS FEMME{% endblock %}

{% block body %}
<h1 class="titre-liste-produit">BOUTIQUE
 FEMME</h1>
<section>
<article id="liste-tri">
<ul>
<li>Taille <i class="fa-solid fa-arrow-down"></i></li>
<li>Couleur <i class="fa-solid fa-arrow-down"></i></li>
<li>Prix <i class="fa-solid fa-arrow-down"></i></li></ul>
</article>
