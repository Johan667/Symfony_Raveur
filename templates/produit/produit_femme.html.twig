  <img class="card-img-top" src="{{ asset('img/' ~ article.image) }}" alt="{{ article.Denomination }}">
  <div class="card-body">
    <h5 class="card-title">{{ article.Denomination }}</h5>
    <p class="card-text">{{ article.Prix}} â‚¬</p>
    <a href="{{ path('produit_femme_detail', {'id' : article.id}) }}" class="btn btn-primary">Acheter</a>
  </div>
</div>
{% endfor %}

</section>
{% endblock %}